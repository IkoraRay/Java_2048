<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ControleBotoes">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="2048"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:textSize="@android:dimen/notification_large_icon_height"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cima"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400dp"
        android:id="@+id/bcima"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Baixo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="500dp"
        android:id="@+id/bbaixo"/>

    <Button
        android:id="@+id/besquerda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="450dp"
        android:text="Esquerda" />

    <Button
        android:id="@+id/bdireita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="247dp"
        android:layout_marginTop="450dp"
        android:text="Direita" />
</RelativeLayout>